{{!comments.hbs}}
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<div class="container-fluid">

		<div class="row">
			{{#each comment in model.comments}}
			<li>
				<p>my name<small>{{ago date}}</small></p>
				<p class="bubble">{{comment.message}}</p>
			</li>
			{{/each}}


			{{input type="text" value=model.newComment action="createComment" placeholder="say something.."}}
		</div>

	</div>